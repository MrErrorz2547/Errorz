//section-1	ข้อสอบปฏิบัติภาคทฤษฎี (กลางภาค) 10 คะแนน
import java.util.Scanner; 
public class Test3 {
    public int x;
    public int y; 
    public char mode;
    public static void main(String[] args) {
        System.out.println("Hi ThirdClass");
        Test3 obj = new Test3();
        obj.input_x();
        obj.input_y();
        obj.input_mode();
        obj.selcet_mode(obj.mode, obj.x, obj.y);
    }
    public void input_x(){
        Scanner scanner = new Scanner(System.in);
        System.out.print("input_x:");
        x=scanner.nextInt();
    }
    public void input_y(){
        Scanner scanner = new Scanner(System.in);
        System.out.print("input_y:");
        y=scanner.nextInt();
    }
    public void input_mode(){
        Scanner scanner = new Scanner(System.in);
        System.out.print("input_mode:");
        mode = scanner.next().charAt(0);
    }
    public void selcet_mode(char m, int x, int y){
        System.out.println(m);
        switch(m) {
            case 'A':
                System.out.println("ADD");
                System.out.println("x + y = " + (x + y));
                break;
            case 'S':
                System.out.println("SUB");
                System.out.println("x - y = " + (x - y));
                break;
            case 'M':
                System.out.println("MUL");
                System.out.println("x * y = " + (x * y));
                break;
            case 'D':
                System.out.println("DIV");
                System.out.println("x / y = " + (x / y));
                break;
            default:
                System.out.println("ไรวะ");
                break;
        }
        }
        
    }
    /*ให้นักศึกษา เขียนการืทำงานภายใน select_mode
    ให้รับค่า mode ,x , y
    แบบบ swich case
    กำหนดให้ ถ้า mode เป็น
     A  ให้แสดงข้อความ ว่า ADD และแสดงค่า x y
     S  ให้แสดงข้อความ ว่า SUB และแสดงค่า x y
     M  ให้แสดงข้อความ ว่า MUL และแสดงค่า x y
     D  ให้แสดงข้อความ ว่า DIV และแสดงค่า x y
     */
